{
    "name": "forjix/skeleton",
    "description": "Forjix Framework application skeleton",
    "type": "project",
    "license": "MIT",
    "require": {
        "php": "^8.2",
        "forjix/forjix": "^1.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0"
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "start": "php forjix serve",
        "test": "phpunit"
    },
    "config": {
        "sort-packages": true,
        "optimize-autoloader": true
    }
}
